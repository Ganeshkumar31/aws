# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=your-secret-key-here  # Replace with a strong, random string

# AWS Configuration
AWS_REGION=your-aws-region           # e.g., us-east-1
SNS_TOPIC_ARN=arn:aws:sns:your-region:account-id:your-topic-name

# DynamoDB Table Names (or RDS depending on your app)
USERS_TABLE=HealthcareUsers
APPOINTMENTS_TABLE=HealthcareAppointments
PRESCRIPTIONS_TABLE=HealthcarePrescriptions

# SMTP Configuration (Gmail or your provider)
SMTP_SERVER=smtp.gmail.com           # Or your SMTP server
SMTP_PORT=587
SMTP_USERNAME=your-email@example.com  # e.g., no-reply@yourdomain.com
SMTP_PASSWORD=your-email-password     # Use an app password if Gmail
SENDER_EMAIL=no-reply@yourdomain.com
